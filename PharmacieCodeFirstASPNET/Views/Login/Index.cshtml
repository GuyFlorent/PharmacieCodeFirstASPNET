@model PharmacieCodeFirstASPNET.ViewModel.ClientViewModel

@{
    ViewBag.Title = "Connexion";
}

<h2>Connexion</h2>

@if (Model.Authentfie)
{
    <h3>
        Vous êtes déja connceté au nom:
        @*@Model.client.Nom*@
    </h3>
    @Html.ActionLink("Voulez vous vous déconnecter?", "Deconnexion")
}
else
{
    <p> Veuillez vous connecter :</p>
    <br />
    using (Html.BeginForm())
    {
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.client.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.client.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.client.Email,"", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.client.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.client.Password, new { @class = "form-control" })

            @Html.ValidationMessageFor(m => m.client.Password,"", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Se Connecter" class="btn btn-success form-control"/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 ">
            <p class="text-info">  Pas de compte?</p>
        </div>
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Creer un Compte en 2 minutes !", "CreerCompte",null, new {@class ="btn btn-primary btn-lg active" })
        </div>
    </div>
    </div>
   
    }
    }
